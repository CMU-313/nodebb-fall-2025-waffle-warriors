{
  "id": "nodebb-plugin-anonymous-button",
  "name": "Anonymous Button",
  "description": "Adds a button to toggle anonymous posts",
  "library": "./index.js",
  "scss": ["public/scss/default.scss"],
  "scripts": ["public/js/client.js"],
  "hooks": [
    { "hook": "static:app.load", "method": "init" },
    { "hook": "filter:composer.formatting", "method": "addComposerButton" },
    { "hook": "filter:composer.postData", "method": "populatePostData" },
    { "hook": "filter:post.save", "method": "addAnonymousFlag" },
    { "hook": "filter:config.get", "method": "addConfig" }
  ],
  "sockets": "./websockets.js"
}







